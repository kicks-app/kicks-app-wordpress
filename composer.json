{
  "name": "kicks-app-wordpress",
  "description": "Wordpress Development Stack",
  "version": "0.1.0",
  "config": {
    "vendor-dir": "vendor/lib"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wp-bootstrap-hooks",
        "version": "dev-master",
        "type": "wordpress-muplugin",
        "source": {
          "type": "git",
          "url": "https://github.com/benignware/wp-bootstrap-hooks.git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wp-social-menu-icons",
        "version": "dev-master",
        "type": "wordpress-plugin",
        "source": {
          "type": "git",
          "url": "https://github.com/benignware-labs/wp-social-menu-icons.git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wp-swiper-shortcode",
        "version": "v0.0.6",
        "type": "wordpress-plugin",
        "source": {
          "type": "git",
          "url": "https://github.com/benignware-labs/wp-swiper-shortcode.git",
          "reference": "v0.0.6"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wp-responsive-thumbnail",
        "version": "v0.0.1",
        "type": "wordpress-plugin",
        "source": {
          "type": "git",
          "url": "https://github.com/benignware-labs/wp-reponsive-thumbnail.git",
          "reference": "v0.0.1"
        }
      }
    }
  ],
  "require": {
    "wemakecustom/wp-mu-loader": "*",
    "wp-bootstrap-hooks": "dev-master",
    "wp-social-menu-icons": "dev-master",
    "wp-swiper-shortcode": ">=0.0.6",
    "wp-responsive-thumbnail": ">=0.0.1",
    "wpackagist-plugin/regenerate-thumbnails":">=2.2.6",
    "wpackagist-plugin/posts-to-posts": ">=1.6.5",
    "wpackagist-plugin/post-type-archive-links": ">=1.3.1",
    "wpackagist-plugin/mailchimp-for-wp": ">=4.1.10",
    "wpackagist-plugin/post-thumbnail-editor": ">=2.4.8",
    "wpackagist-plugin/thumbnail-upscale": ">=1.1"
  },
  "scripts": {
    "post-autoload-dump": [
      "php -r \"copy('wp-content/mu-plugins/mu-loader/mu-require.php', 'wp-content/mu-plugins/mu-require.php');\""
    ]
  },
  "extra": {
  	"webroot-dir": "wp-core",
  	"webroot-package": "wordpress",
    "installer-paths": {
      "wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  }
}
