{
  "name": "wp-stack",
  "version": "0.0.1",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "vendor-dir": "vendor/lib"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "4.6.1",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.6.1.zip"
        },
        "require" : {
	    	"fancyguy/webroot-installer": "1.1.0"
	    }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "wp-bootstrap-hooks",
        "version": "dev-master",
        "type": "wordpress-muplugin",
        "source": {
          "type": "git",
          "url": "https://github.com/rexblack/wp-bootstrap-hooks.git",
          "reference": "master"
        }
      }
    }
  ],
  "require": {
    "wordpress": "4.6.1",
    "wemakecustom/wp-mu-loader": "*",
    "wp-bootstrap-hooks": "master",
    "wpackagist-plugin/regenerate-thumbnails":">=2.2.6",
    "vlucas/phpdotenv": "*",
    "banago/phploy": "*"
  },
  "scripts": {
    "post-autoload-dump": [
      "php -r \"copy('wp-content/mu-plugins/mu-loader/mu-require.php', 'wp-content/mu-plugins/mu-require.php');\""
    ],
    "deploy": "php vendor/lib/banago/phploy/bin/phploy.phar",
    "deploy-production": "php vendor/lib/banago/phploy/bin/phploy.phar -s production",
    "deploy-test": "php vendor/lib/banago/phploy/bin/phploy.phar -s test"
  },
  "extra": {
  	"webroot-dir": "wp-core",
  	"webroot-package": "wordpress",
    "installer-paths": {
      "wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  }
}